@model WebApplication4.Models.Surveys

@{
    ViewBag.Title = "surveyEdit";
}

@using System.Data;
@using System;
<h2>编辑</h2>
<h4>G 调查员后记</h4>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.num)
    @Html.HiddenFor(model => model.phone)
    @Html.HiddenFor(model => model.name)
    @Html.HiddenFor(model => model.checkid)
    @Html.HiddenFor(model => model.dt1)
    @Html.HiddenFor(model => model.dt2)
    @Html.HiddenFor(model => model.dt3)
    @Html.HiddenFor(model => model.dt4)
    @Html.HiddenFor(model => model.dt5)
    @Html.HiddenFor(model => model.dt6)
    @Html.HiddenFor(model => model.dt7)
    @Html.HiddenFor(model => model.dt8)
    @Html.HiddenFor(model => model.dt9)

<div>
    <hr style="border:#000000 1px solid;" />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @foreach (DataRow item in Model.dt9.Rows)
    {

        int surveyobject = Convert.ToInt32(item[2]);

        <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
            <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">G1&nbsp;&nbsp;&nbsp;&nbsp;调查对象合作情况:</label>
            <div class="col-md-8">

                <label>@Html.RadioButtonFor(model => surveyobject, 1, new { htmlAttributes = new { @class = "form-control" } }) 很好</label>

                <label>@Html.RadioButtonFor(model => surveyobject, 2, new { htmlAttributes = new { @class = "form-control" } }) 好</label>
                <label>@Html.RadioButtonFor(model => surveyobject, 3, new { htmlAttributes = new { @class = "form-control" } }) 一般</label>

                <label>@Html.RadioButtonFor(model => surveyobject, 4, new { htmlAttributes = new { @class = "form-control" } }) 差</label>

            </div>
        </div>


        int surveybelieve = Convert.ToInt32(item[3]);

        <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
            <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">G2&nbsp;&nbsp;&nbsp;&nbsp;调查对象回答问题是否可信:</label>
            <div class="col-md-8">

                <label>@Html.RadioButtonFor(model => surveybelieve, 1, new { htmlAttributes = new { @class = "form-control" } }) 可信</label>

                <label>@Html.RadioButtonFor(model => surveybelieve, 2, new { htmlAttributes = new { @class = "form-control" } }) 尚可信</label>
                <label>@Html.RadioButtonFor(model => surveybelieve, 3, new { htmlAttributes = new { @class = "form-control" } }) 似不可信</label>


            </div>
        </div>

        DateTime surveyend = Convert.ToDateTime(item[4]);
        string dt = surveyend.ToString("yyyy-MM-dd");
        <div class="form-group" style="font-size:18px;padding:3px;">
            <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">G3&nbsp;&nbsp;&nbsp;&nbsp;调查结束时间:</label>
            <div class="col-md-8" style="margin-bottom:8px">
                <input class="form-control" data-val="true" id="surveyend" name="surveyend" type="date" value="@dt">
            </div>
        </div>

        int surveyspendtime = Convert.ToInt32(item[5]);
        <div class="form-group" style="font-size:18px;padding:3px;">
            <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">G4&nbsp;&nbsp;&nbsp;&nbsp;本调查共用去多少时间(分钟):</label>
            <div class="col-md-8">
                <input class="form-control text-box single-line" data-val="true" id="surveyspendtime" name="surveyspendtime" type="text" value="@surveyspendtime">
            </div>
        </div>


        int surveyevaluate = Convert.ToInt32(item[6]);

        <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
            <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">G5&nbsp;&nbsp;&nbsp;&nbsp;整个调查材料质量评价:</label>
            <div class="col-md-8">

                <label>@Html.RadioButtonFor(model => surveyevaluate, 1, new { htmlAttributes = new { @class = "form-control" } }) 较高</label>

                <label>@Html.RadioButtonFor(model => surveyevaluate, 2, new { htmlAttributes = new { @class = "form-control" } }) 一般</label>
                <label>@Html.RadioButtonFor(model => surveyevaluate, 3, new { htmlAttributes = new { @class = "form-control" } }) 不太满意</label>


            </div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="font-size:18px;padding:3px">
            <input type="submit" value="保存" class="btn btn-default" />|
            <a href="javascript:window.history.go(-1)">返回</a>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
