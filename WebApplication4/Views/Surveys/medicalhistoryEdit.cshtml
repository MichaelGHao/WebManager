                        <label class="control-label col-md-3" style="padding-top:1px;padding-left:0">发生时间:</label>
                        <div class="col-md-9" style="margin-bottom:8px">
                            <input class="form-control" data-val="true" id="time3s" name="time3s" type="date" value="@t3s">
                        </div>
                    </div>
                </div>

            </div>



            int apoplexy = Convert.ToInt32(item[10]);
            DateTime time4s = Convert.ToDateTime(item[11]);
            string t4s = time4s.ToString("yyyy-MM-dd");
            <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
                <div class="col-md-6">
                    <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;E34&nbsp;&nbsp;&nbsp;&nbsp;脑卒中:</label>
                    <div class="col-md-8">

                        <label>@Html.RadioButtonFor(model => apoplexy, 0, new { htmlAttributes = new { @class = "form-control" } }) 否</label>

                        <label>@Html.RadioButtonFor(model => apoplexy, 1, new { htmlAttributes = new { @class = "form-control" } }) 是</label>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="font-size:18px;padding:3px;">
                        <label class="control-label col-md-3" style="padding-top:1px;padding-left:0">发生时间:</label>
                        <div class="col-md-9" style="margin-bottom:8px">
                            <input class="form-control" data-val="true" id="time4s" name="time4s" type="date" value="@t4s">
                        </div>
                    </div>
                </div>

            </div>



            int Diabetes = Convert.ToInt32(item[12]);
            DateTime time5s = Convert.ToDateTime(item[13]);
            string t5s = time5s.ToString("yyyy-MM-dd");
            <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
                <div class="col-md-6">
                    <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;E35&nbsp;&nbsp;&nbsp;&nbsp;糖尿病:</label>
                    <div class="col-md-8">

                        <label>@Html.RadioButtonFor(model => Diabetes, 0, new { htmlAttributes = new { @class = "form-control" } }) 否</label>

                        <label>@Html.RadioButtonFor(model => Diabetes, 1, new { htmlAttributes = new { @class = "form-control" } }) 是</label>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="font-size:18px;padding:3px;">
                        <label class="control-label col-md-3" style="padding-top:1px;padding-left:0">发生时间:</label>
                        <div class="col-md-9" style="margin-bottom:8px">
                            <input class="form-control" data-val="true" id="time5s" name="time5s" type="date" value="@t5s">
