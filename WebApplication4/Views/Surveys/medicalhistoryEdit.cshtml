            DateTime time6s = Convert.ToDateTime(item[15]);
            string t6s = time6s.ToString("yyyy-MM-dd");
            <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
                <div class="col-md-6">
                    <label class="control-label col-md-6" style="padding-top:1px;padding-left:0">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;E36&nbsp;&nbsp;&nbsp;&nbsp;慢性肝炎(乙肝/丙肝):</label>
                    <div class="col-md-6">

                        <label>@Html.RadioButtonFor(model => chronichepatitis, 0, new { htmlAttributes = new { @class = "form-control" } }) 否</label>

                        <label>@Html.RadioButtonFor(model => chronichepatitis, 1, new { htmlAttributes = new { @class = "form-control" } }) 是</label>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="font-size:18px;padding:3px;">
                        <label class="control-label col-md-3" style="padding-top:1px;padding-left:0">发生时间:</label>
                        <div class="col-md-9" style="margin-bottom:8px">
                            <input class="form-control" data-val="true" id="time6s" name="time6s" type="date" value="@t6s">
                        </div>
                    </div>
                </div>

            </div>


            int Pulmonarytuberculosis = Convert.ToInt32(item[16]);
            DateTime time7s = Convert.ToDateTime(item[17]);
            string t7s = time7s.ToString("yyyy-MM-dd");
