            DateTime time2s = Convert.ToDateTime(item[7]);
            string t2s = time2s.ToString("yyyy-MM-dd");
            <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
                <div class="col-md-6">
                    <label class="control-label col-md-4" style="padding-top:1px;padding-left:0">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;E32&nbsp;&nbsp;&nbsp;&nbsp;高血脂:</label>
                    <div class="col-md-8">

                        <label>@Html.RadioButtonFor(model => Hyperlipidemia, 0, new { htmlAttributes = new { @class = "form-control" } }) 否</label>

                        <label>@Html.RadioButtonFor(model => Hyperlipidemia, 1, new { htmlAttributes = new { @class = "form-control" } }) 是</label>

