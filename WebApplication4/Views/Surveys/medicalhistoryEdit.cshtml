@model WebApplication4.Models.Surveys

@{
    ViewBag.Title = "medicalhistoryEdit";
}

@using System.Data;
@using System;
<h2>编辑</h2>
<h4>E 疾病史</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.num)
    @Html.HiddenFor(model => model.phone)
    @Html.HiddenFor(model => model.name)
    @Html.HiddenFor(model => model.checkid)
    @Html.HiddenFor(model => model.dt1)
    @Html.HiddenFor(model => model.dt2)
    @Html.HiddenFor(model => model.dt3)
    @Html.HiddenFor(model => model.dt4)
    @Html.HiddenFor(model => model.dt5)
    @Html.HiddenFor(model => model.dt6)
    @Html.HiddenFor(model => model.dt7)
    @Html.HiddenFor(model => model.dt8)
    @Html.HiddenFor(model => model.dt9)

<div>

    <hr style="border:#000000 1px solid;" />
    <div style="overflow-y:auto; overflow-x:auto;">

        <div class="form-group" style="font-size:18px;padding:3px;overflow-y:auto; overflow-x:auto;margin-bottom:0">
            <label class="control-label col-md-7" style="padding-top:1px;padding-left:0">E1&nbsp;&nbsp;&nbsp;&nbsp;您是否反复出现腹痛、纳差、饱胀、烧心或吞咽不畅等消化不良症状:</label>
            <div class="col-md-5">
                &nbsp;
            </div>
        </div>


        <table class="table" style="font-size:18px;padding:3px">
            <tr>
                <th>
                    临床症状&&评分
                </th>

                <th>
                    1
                </th>
                <th>
                    2
                </th>
                <th>
                    3
                </th>
                <th>
                    4
                </th>

            </tr>
            @foreach (DataRow item in Model.dt7.Rows)
            {
                int symptomstype = Convert.ToInt32(item[2]);
                if (symptomstype == 1)
                {
                    <tr>
                        <td>
                            疼痛
                        </td>
                        @{
                            int tengtong = Convert.ToInt32(item[3]);
                        }

                        <td>
                            @Html.RadioButtonFor(model => tengtong, 1, new { htmlAttributes = new { @class = "form-control" } }) 无疼痛感觉
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => tengtong, 2, new { htmlAttributes = new { @class = "form-control" } }) 轻度疼痛，不影响日常生活和工作，不需服药
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => tengtong, 3, new { htmlAttributes = new { @class = "form-control" } }) 疼痛明显，部分影响日常生活和工作，或需服药
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => tengtong, 4, new { htmlAttributes = new { @class = "form-control" } }) 疼痛严重，必须全休，服药或进食无效
                        </td>

                    </tr>
                }
                else if (symptomstype == 2)
                {
                    <tr>
                        <td>
                            烧灼感
                        </td>

                        @{
                            int zhuoshao = Convert.ToInt32(item[3]);
                        }

                        <td>
                            @Html.RadioButtonFor(model => zhuoshao, 1, new { htmlAttributes = new { @class = "form-control" } }) 无烧灼感
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => zhuoshao, 2, new { htmlAttributes = new { @class = "form-control" } }) 偶有不适
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => zhuoshao, 3, new { htmlAttributes = new { @class = "form-control" } }) 频繁不适，持续时间长
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => zhuoshao, 4, new { htmlAttributes = new { @class = "form-control" } }) 持续不适，用抗酸药只能短暂缓解
                        </td>

                    </tr>
                }
                else if (symptomstype == 3)
                {
                    <tr>
                        <td>
                            反酸
                        </td>

                        @{
                            int fansuan = Convert.ToInt32(item[3]);
                        }

                        <td>
                            @Html.RadioButtonFor(model => fansuan, 1, new { htmlAttributes = new { @class = "form-control" } }) 无反酸
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => fansuan, 2, new { htmlAttributes = new { @class = "form-control" } }) 偶有反酸
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => fansuan, 3, new { htmlAttributes = new { @class = "form-control" } }) 一天1到2次反酸
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => fansuan, 4, new { htmlAttributes = new { @class = "form-control" } }) 一天数次反酸
                        </td>

                    </tr>
                }
                else if (symptomstype == 4)
                {
                    <tr>
                        <td>
                            恶心呕吐
                        </td>

                        @{
                            int exinotu = Convert.ToInt32(item[3]);
                        }

                        <td>
                            @Html.RadioButtonFor(model => exinotu, 1, new { htmlAttributes = new { @class = "form-control" } }) 不恶心
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => exinotu, 2, new { htmlAttributes = new { @class = "form-control" } }) 偶有且短暂
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => exinotu, 3, new { htmlAttributes = new { @class = "form-control" } }) 频繁恶心，有呕吐
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => exinotu, 4, new { htmlAttributes = new { @class = "form-control" } }) 持续恶心，频繁呕吐
                        </td>

                    </tr>
                }
                else if (symptomstype == 5)
                {
                    <tr>
                        <td>
                            嗳气
                        </td>

                        @{
                            int aiqi = Convert.ToInt32(item[3]);
                        }

                        <td>
                            @Html.RadioButtonFor(model => aiqi, 1, new { htmlAttributes = new { @class = "form-control" } }) 无嗳气
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => aiqi, 2, new { htmlAttributes = new { @class = "form-control" } }) 偶有嗳气
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => aiqi, 3, new { htmlAttributes = new { @class = "form-control" } }) 频繁嗳气
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => aiqi, 4, new { htmlAttributes = new { @class = "form-control" } }) 持续嗳气，影响活动
                        </td>

                    </tr>
                }
                else if (symptomstype == 6)
                {
                    <tr>
                        <td>
                            腹胀
                        </td>

                        @{
                            int fuzhang = Convert.ToInt32(item[3]);
                        }

                        <td>
                            @Html.RadioButtonFor(model => fuzhang, 1, new { htmlAttributes = new { @class = "form-control" } }) 无腹胀
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => fuzhang, 2, new { htmlAttributes = new { @class = "form-control" } }) 偶有不适
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => fuzhang, 3, new { htmlAttributes = new { @class = "form-control" } }) 腹胀明显，影响活动
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => fuzhang, 4, new { htmlAttributes = new { @class = "form-control" } }) 腹胀严重，影响活动
                        </td>
                    </tr>
                }

            }

        </table>

        @foreach (DataRow item in Model.dt6.Rows)
