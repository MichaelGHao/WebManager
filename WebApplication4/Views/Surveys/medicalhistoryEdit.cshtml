                        <label class="control-label col-md-3" style="padding-top:1px;padding-left:0">发生时间:</label>
                        <div class="col-md-9" style="margin-bottom:8px">
                            <input class="form-control" data-val="true" id="time2s" name="time2s" type="date" value="@t2s">
                        </div>
                    </div>
                </div>

            </div>


            int codisease = Convert.ToInt32(item[8]);
