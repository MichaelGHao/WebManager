                    <div class="col-md-8">

                        <label>@Html.RadioButtonFor(model => hyperts, 0, new { htmlAttributes = new { @class = "form-control" } }) 否</label>

                        <label>@Html.RadioButtonFor(model => hyperts, 1, new { htmlAttributes = new { @class = "form-control" } }) 是</label>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group" style="font-size:18px;padding:3px;">
                        <label class="control-label col-md-3" style="padding-top:1px;padding-left:0">发生时间:</label>
                        <div class="col-md-9" style="margin-bottom:8px">
                            <input class="form-control" data-val="true" id="time1s" name="time1s" type="date" value="@t1s">
                        </div>
                    </div>
                </div>

            </div>

