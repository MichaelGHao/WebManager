@model WebApplication4.Models.Gastroscopy

@{
    ViewBag.Title = "EditOther";
}

<h2>编辑</h2>


@using (Html.BeginForm("EditOther", "Gastroscopies", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.scannum)
    @Html.HiddenFor(model => model.Visit)
    @Html.HiddenFor(model => model.PastId)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Pic1)
    @Html.HiddenFor(model => model.Pic2)
    @Html.HiddenFor(model => model.Pic3)
    @Html.HiddenFor(model => model.Pic4)
    @Html.HiddenFor(model => model.Pic5)


<div class="form-horizontal">
    <h4>胃镜检查</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2" style="padding-top:1px">检查名称:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Checkname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Checkname, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" style="padding-top:1px">检查时间:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(Model => Model.dt, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.dt, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="padding-top:1px">检查号:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Checknum, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Checknum, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="padding-top:1px">检查结论:</label>
        <div class="col-md-10">
            <textarea cols="20" htmlattributes="{ class = white-space:pre-wrap }" style="height:100px;width:400px" id="Conclusion" name="Conclusion" rows="2">@Model.Conclusion</textarea>

            @Html.ValidationMessageFor(model => model.Conclusion, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">选择图片</label>
        <div class="col-md-10">
            <input type="file" name="filename" id="filename" value="选择" />
            @*<img src="" id="img1" name="img1" style="width:100px ;height:100px" alt=""  />*@
            @*<img src="@Html.DisplayFor(model => model.ImageUrl)" width="100" height="100" id="image">*@

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">选择图片</label>
        <div class="col-md-10">
            <input type="file" name="filename1" id="filename1" value="选择" />
            @*<img src="" id="img1" name="img1" style="width:100px ;height:100px" alt=""  />*@
            @*<img src="@Html.DisplayFor(model => model.ImageUrl)" width="100" height="100" id="image">*@

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">选择图片</label>
        <div class="col-md-10">
            <input type="file" name="filename2" id="filename2" value="选择" />
            @*<img src="" id="img1" name="img1" style="width:100px ;height:100px" alt=""  />*@
            @*<img src="@Html.DisplayFor(model => model.ImageUrl)" width="100" height="100" id="image">*@

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">选择图片</label>
        <div class="col-md-10">
            <input type="file" name="filename3" id="filename3" value="选择" />
            @*<img src="" id="img1" name="img1" style="width:100px ;height:100px" alt=""  />*@
            @*<img src="@Html.DisplayFor(model => model.ImageUrl)" width="100" height="100" id="image">*@

        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">选择图片</label>
        <div class="col-md-10">
            <input type="file" name="filename4" id="filename4" value="选择" />
            @*<img src="" id="img1" name="img1" style="width:100px ;height:100px" alt=""  />*@
            @*<img src="@Html.DisplayFor(model => model.ImageUrl)" width="100" height="100" id="image">*@

        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="font-size:18px;padding:3px">
            <input type="submit" value="保存" class="btn btn-default" />|
            <a href="javascript:window.history.go(-1)">返回</a>
        </div>
    </div>
</div>

    <div class="form-group">
        <div>
            <input type="text" name="Checktime" id="Checktime" value="1" style="display:none" />
            @Html.ValidationMessageFor(model => model.Checktime, "", new { @class = "text-danger" })
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
