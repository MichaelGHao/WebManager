        $('#btn6').hide();
        $("#my-img3").show();
        var file = document.getElementById('filename2');
        file.value = ''; //虽然file的value值不能设为有内容的字符，但是可以设置为空字符
        //或者
        file.outerHTML = file.outerHTML; //重新初始化了file的html
