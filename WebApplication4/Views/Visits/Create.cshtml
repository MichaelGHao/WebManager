@model WebApplication4.Models.Visit

@{
    ViewBag.Title = "Create";
}

<h2>新建</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Identinum)
    <div class="form-horizontal">

        <div style="display:none">
            @Html.EditorFor(model => model.scannum, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.scannum, "", new { @class = "text-danger" })
        </div>

        <h4>就诊</h4>
        <hr />
        <div class="form-group" style="font-size:18px;padding:3px">
            <label class="control-label col-md-2" style="padding-top:3px">就诊:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VisitId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VisitId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="font-size:18px;padding:3px">
            <label class="control-label col-md-2" style="padding-top:3px">日期:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(Model => Model.dateTime, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dateTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="font-size:18px;padding:3px">
                <input type="submit" value="保存" class="btn btn-default" />|
                <a href="javascript:window.history.go(-1)">返回</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
