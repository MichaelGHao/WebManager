@model WebApplication4.Models.FollowUp

@{
    ViewBag.Title = "Create";
}

<h2>新建</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.refid)
    @Html.HiddenFor(model => model.scannum)
    @Html.HiddenFor(model => model.visit)

<div class="form-horizontal">
    <h4>随访</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" style="font-size:18px;padding:3px">
        <label class="control-label col-md-2" style="padding-top:1px">日期:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(Model => Model.date, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="font-size:18px;padding:3px">
        <label class="control-label col-md-2" style="padding-top:1px">随访内容:</label>
        <div class="col-md-10">
            <textarea cols="20" htmlattributes="{ class = white-space:pre-wrap }" style="height:100px;width:400px" id="content" name="content" rows="2"></textarea>

            @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="font-size:18px;padding:3px">
            <input type="submit" value="保存" class="btn btn-default" />|
            <a href="javascript:window.history.go(-1)">返回</a>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
